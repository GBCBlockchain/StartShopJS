<div class="row">
    <% for (var i = 0; i < products.length; ++i) { %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="<%= products[i].imagePath %>">
                <div class="caption">
                    <h3><%= products[i].title %></h3>

                    <div class="description">
                        <p><%= products[i].description %></p>
                    </div>

                    <h5><strong>Price: </strong>$<%= products[i].price %></h5>
                    <p><a href="#" class="btn btn-primary" role="button">View Details</a> <a href="#" class="btn btn-info" role="button">Add to Cart</a></p>
                </div>
            </div>
        </div>
    <% } %>
</div>